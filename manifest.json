/* File: manifest.json
 * -------------------
 * A manifest file (like this one) is used to
 * give Chrome information about your extension.
 *
 * You shouldn't need to change anything in this file
 * unless you're doing extensions.
 *
 * For more details, check out the documentation:
 * https://developer.chrome.com/extensions/manifest
 */

{
  // Required
  "manifest_version": 3,
  "name": "Permanent Record",
  "version": "0.0.1",
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Permanent Record",
    "default_icon": {
      "16": "icons/save-icon-16.png",
      "32": "icons/save-icon-32.png",
      "64": "icons/save-icon-32.png",
      "96": "icons/save-icon-96.png"
    }
  },



  // Recommended
  "description": "Archives webpages onto the blockchain - TreeHacks 2024",
  "icons": {
    "16": "icons/save-icon-16.png",
    "32": "icons/save-icon-32.png",
    // "48": "icons/TreeHacks-white-48.png",
    "64": "icons/save-icon-64.png",
    "96": "icons/save-icon-96.png"
    // "128": "icons/TreeHacks-white-128.png"
  },

  // Optional
  //"homepage_url": "https://www.treehacks.com/",

  // Put any additional permissions your applications needs here.
  // For a list of possibilities, see
  // https://developer.chrome.com/extensions/declare_permissions
  "permissions": [
    "storage", // Allows access to chrome.storage API
    "downloads",
    "activeTab",
    "tabs"
],

  "background": {
    "service_worker": "/src/background.js"
  }

  // "content_scripts": [
  //   {
  //     "matches": [
  //       "*://*/*"
  //     ],
  //     "js": [
  //       "/src/content.js"
  //     ],
  //     "run_at": "document_end"
  //   }
  // ]
}
